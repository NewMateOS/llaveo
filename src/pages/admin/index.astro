---
import AdminApp from '../../ui/AdminApp.jsx';
import { securityMiddleware } from '../../lib/middleware';
import { applySecurityHeaders } from '../../lib/security';

// Proteger la ruta - solo administradores pueden acceder
const { user, hasAccess, error, response } = await securityMiddleware(Astro.cookies, {
  requireAuth: true,
  requireRole: 'admin',
  redirectTo: '/access-denied'
});

if (!hasAccess || response) {
  return response || Astro.redirect('/access-denied');
}

const brand = import.meta.env.PUBLIC_BRAND_NAME || 'LLAVE';
---
<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Panel de Administración · {brand}</title>
    <link rel="stylesheet" href="/src/styles/global.css" />
  </head>
  <body class="min-h-screen" style="background: #F7FAFC;">
    <div id="root"><AdminApp client:load /></div>
  </body>
</html>
