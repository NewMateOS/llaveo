    <script>
      import { getSupabaseClient } from '../lib/supabase-client';
      import { hydrateClientFromServerSession } from '../lib/session-sync';

      const supabase = getSupabaseClient();

      // Función para actualizar la UI según el estado de autenticación
      async function updateUserUI(forceRefresh = false) {
        console.log('🎨 [Index] updateUserUI llamado', { forceRefresh });
        
        try {
          // Si forceRefresh, esperar un momento para que la sesión se sincronice
          if (forceRefresh) {
            console.log('⏳ [Index] Esperando sincronización de sesión...');
            await new Promise(resolve => setTimeout(resolve, 500));
          }
          
          // Intentar obtener la sesión con reintentos en producción
          let session = null;
          let error = null;
          
          console.log('🔍 [Index] Obteniendo sesión...');
          for (let attempt = 0; attempt < 3; attempt++) {
            console.log(`   Intento ${attempt + 1}/3...`);
            const result = await supabase.auth.getSession();
            session = result.data?.session || null;
            error = result.error;
            
            if (session || !error) {
              console.log(`✅ [Index] Sesión obtenida en intento ${attempt + 1}`, {
                hasSession: !!session,
                userEmail: session?.user?.email || 'N/A'
              });
              break;
            }
            
            // Esperar antes del siguiente intento
            if (attempt < 2) {
              await new Promise(resolve => setTimeout(resolve, 300));
            }
          }

          if (!session) {
            console.log('🔄 [Index] Intentando hidratar sesión desde el servidor...');
            session = await hydrateClientFromServerSession(supabase);
          }
          
          if (error && !session) {
            console.error('❌ [Index] Error getting session después de reintentos:', error);
          } else if (!session) {
            console.log('ℹ️ [Index] No hay sesión activa');
          }
          
          const loginBtn = document.getElementById('login-btn');
          const userInfo = document.getElementById('user-info');
          const userName = document.getElementById('user-name');
          const userAvatar = document.getElementById('user-avatar') as HTMLImageElement | null;

          if (session?.user) {
            // Usuario logueado - mostrar info del usuario
            if (loginBtn) loginBtn.classList.add('hidden');
            if (userInfo) userInfo.classList.remove('hidden');
            
            // Obtener nombre del usuario
            const name = session.user.user_metadata?.full_name || 
                        session.user.user_metadata?.name || 
                        session.user.email?.split('@')[0] || 
                        'Usuario';
            
            if (userName) userName.textContent = name;
            
            // Obtener avatar
            const avatar = session.user.user_metadata?.avatar_url || 
                         session.user.user_metadata?.picture ||
                         `https://ui-avatars.com/api/?name=${encodeURIComponent(name)}&background=EB9561&color=fff&size=128`;
            
            if (userAvatar) {
              userAvatar.src = avatar;
              userAvatar.alt = name;
            }
          } else {
            // Usuario no logueado - mostrar botón de login
            if (loginBtn) loginBtn.classList.remove('hidden');
            if (userInfo) userInfo.classList.add('hidden');
          }
        } catch (err) {
          console.error('Error updating UI:', err);
        }
      }

      // Función para logout
      (window as any).handleLogout = async function() {
        const { error } = await supabase.auth.signOut();
        try {
          await fetch('/api/auth/session', {
            method: 'DELETE',
            credentials: 'same-origin'
          });
        } catch (apiError) {
          console.error('Error al limpiar la sesión del servidor:', apiError);
        }

        if (error) {
          console.error('Error al cerrar sesión:', error);
          alert('Error al cerrar sesión');
        } else {
          await updateUserUI();
          window.location.href = '/';
        }
      };

      // Exponer funciones globales para que otros scripts puedan reutilizarlas
      (window as any).updateUserUI = updateUserUI;
      (window as any).hydrateSupabaseSession = () => hydrateClientFromServerSession(supabase);

      // Bandera para evitar múltiples actualizaciones
      let isUpdating = false;

      // Escuchar cambios en el estado de autenticación
      supabase.auth.onAuthStateChange((event, session) => {
        if (!isUpdating) {
          isUpdating = true;
          updateUserUI().finally(() => {
            setTimeout(() => { isUpdating = false; }, 500);
          });
        }
      });

      // Manejar mensajes de autenticación desde URL
      const urlParams = new URLSearchParams(window.location.search);
      const authSuccess = urlParams.get('success');
      const authError = urlParams.get('error');

      // Limpiar URL primero para evitar bucles
      if (authSuccess || authError) {
        window.history.replaceState({}, document.title, window.location.pathname);
      }

      if (authSuccess === 'login') {
        (async () => {
          console.log('🔄 [Index] OAuth completado, sincronizando sesión cliente/servidor...');
          await hydrateClientFromServerSession(supabase);

          // Esperar un momento para que la sesión se sincronice después del redirect OAuth
          setTimeout(() => {
            if (!isUpdating) {
              isUpdating = true;
              updateUserUI(true).finally(() => {
                setTimeout(() => { isUpdating = false; }, 500);
              });
            }
          }, 300);
        })();
      } else {
        // Actualizar UI al cargar la página normalmente
        updateUserUI();
      }

      if (authError) {
        // Mostrar mensaje de error
        setTimeout(() => {
          alert('Error en la autenticación: ' + decodeURIComponent(authError));
        }, 100);
      }
    </script>
